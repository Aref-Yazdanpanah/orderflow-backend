# --- Django ---
SECRET_KEY=your-secret-key
DEBUG=True
DJANGO_SETTINGS_MODULE=cryptotracker.settings.local

# --- Postgres (matches docker-compose service names) ---
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Optional: S3-compatible storage (Arvan/MinIO/etc.) ---
USE_ARVAN_S3=false
ARVAN_S3_ACCESS_KEY=your-access-key
ARVAN_S3_SECRET_KEY=your-secret-key
ARVAN_S3_REGION=ir-tbz-sh1
ARVAN_S3_ENDPOINT_URL=https://s3.ir-tbz-sh1.arvanstorage.ir
ARVAN_PUBLIC_MEDIA_BUCKET=crypto-tracker-bucket
ARVAN_PRIVATE_MEDIA_BUCKET=crypto-tracker-bucket
ARVAN_STATICS_BUCKET=crypto-tracker-bucket
